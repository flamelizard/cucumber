<?xml version="1.0" encoding="UTF-8"?>
<!--
Spring XML Bean Configuration
Mark classes for injection
-->
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Bean via XML config, good for production/third party code -->
    <bean class="eu.guy.cucumber.atm.domain.CashSlot" scope="cucumber-glue"/>
    <bean class="eu.guy.cucumber.atm.domain.WebTeller" scope="cucumber-glue">
        <constructor-arg>
            <bean class="eu.guy.cucumber.atm.common.DriverFactory"
                  factory-method="createChromeDriver" lazy-init="true" scope="cucumber.glue"/>
        </constructor-arg>
    </bean>
    <!-- test account instance -->
    <bean class="eu.guy.cucumber.atm.domain.Account" scope="cucumber-glue">
        <constructor-arg value="123"/>
    </bean>

    <!--  Beans via code annotations -->
    <!-- Requires @Component and @Scope("cucumber-glue") on the class -->
    <context:annotation-config/>
    <context:component-scan base-package="eu.guy.cucumber.atm.domain"/>
</beans>
